#!/bin/bash

source bin/set-vars

echo "Stop RabbitMQ server (version ${RMQ_VERSION}) after Integration Tests"

if [ ! -d "${RJMS_RABBITMQ_BASE}" ] ; then
  echo "Couldn't find the RJMS_RABBITMQ_BASE directory"
  exit 1
fi

(sudo ${RJMS_RABBITMQ_BASE}/sbin/rabbitmqctl -n ${RJMS_RABBITMQ_NODENAME} stop && echo 'RabbitMQ server is stopped') || echo 'not stopped'
